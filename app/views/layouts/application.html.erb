<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light shadow-sm">
      <div class="container-fluid">
        <%= link_to flats_path, class: "navbar-brand" do%>
          <img id="logo" src="https://img.icons8.com/color/452/airbnb.png" alt="">
        <% end %>
        <form class="d-flex">
          <input class="search-input form-border form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="search btn btn-outline-success" type="submit"><i class="fas fa-search"></i></button>
           <%= link_to "Add Flat", new_flat_path, class: "button-add btn btn-outline-primary"%>
        </form>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
